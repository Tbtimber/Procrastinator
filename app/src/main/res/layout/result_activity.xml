<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding"
    >

    <include layout="@layout/search_bar"
        android:id="@+id/bar_de_recherche"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Search's results"
        android:id="@+id/textView_results"
        android:layout_below="@id/bar_de_recherche"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_margin_search"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_results"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/content_results"
        android:layout_marginTop="@dimen/size_margin_search">
    </RelativeLayout>


</RelativeLayout>